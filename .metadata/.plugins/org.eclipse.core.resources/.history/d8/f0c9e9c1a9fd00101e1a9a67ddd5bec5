package com.revplay.test;

import static org.mockito.Mockito.*;
import static org.junit.Assert.*;

import org.junit.Before;
import org.junit.Test;
import org.mockito.Mock;
import org.mockito.MockitoAnnotations;

import com.revplay.dao.ArtistDao;
import com.revplay.model.Artist;
import com.revplay.service.ArtistService;

public class ArtistServiceTest {

    @Mock
    private ArtistDao artistDaoImpl;

    private ArtistService service;

    @Before
    public void setUp() {
        MockitoAnnotations.initMocks(this);
        service = new ArtistService(artistDaoImpl);
    }


    @Test
    public void testCreateProfileSuccess() {

        when(artistDaoImpl.profileExists(1)).thenReturn(false);
        when(artistDaoImpl.createProfile(any(Artist.class))).thenReturn(true);

        boolean result = service.createProfile(1, "Bio", "Pop", "insta");

        assertTrue(result);
        verify(artistDaoImpl).profileExists(1);
        verify(artistDaoImpl).createProfile(any(Artist.class));
    }


    @Test
    public void testCreateProfileAlreadyExists() {

        when(artistDaoImpl.profileExists(1)).thenReturn(true);

        boolean result = service.createProfile(1, "Bio", "Pop", "insta");

        assertFalse(result);
        verify(artistDaoImpl).profileExists(1);
        verify(artistDaoImpl, never()).createProfile(any(Artist.class));
    }


    @Test
    public void testUpdateProfile() {

        when(artistDaoImpl.updateProfile(any(Artist.class))).thenReturn(true);

        boolean result = service.updateProfile(1, "NewBio", "Rock", "yt");

        assertTrue(result);
        verify(artistDaoImpl).updateProfile(any(Artist.class));
    }


    @Test
    public void testGetProfile() {

        Artist artist = new Artist();
        when(artistDaoImpl.getArtistByUser(1)).thenReturn(artist);

        Artist result = service.getProfile(1);

        assertEquals(artist, result);
        verify(artistDaoImpl).getArtistByUser(1);
    }


    @Test
    public void testProfileExists() {

        when(artistDaoImpl.profileExists(1)).thenReturn(true);

        boolean result = service.profileExists(1);

        assertTrue(result);
        verify(artistDaoImpl).profileExists(1);
    }
}
